<div class="user-page">
  <div class="profile-box">
    <div class="user-profile">
      <div class="detail-wrapper">
        <div class="detail">
          <div class="user-image">
            <img src="https://pbs.twimg.com/profile_images/1000993501415329792/EVcLnIF-_400x400.jpg">
          </div>
          <div class="user-detail">
            <div class="user-name">
              <h1><%= @user.last_name %>  <%= @user.first_name %></h1>
            </div>
            <div class="user-position">
              <%= @user.position %>
            </div>
            <div class="user-popular">
              もらったlike数:
            </div>
            <div class="user-intro">
              <%= @user.profile %>
            </div>
          </div>
          <% if @user.pro %>
            <div class="badge">
              <img src="https://resources.newspicks.com/for_clients/icons/pro_black.png">
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="user-tab-container">
    <div class="tab-items">
      <div class="tab-item">
        Picks
      </div>
      <div class="tab-item">
        <div class="follow-item">
          <span class="follow-num"><%= @user.following.count %></span>
          <span class="follow">フォロー</span>
        </div>
      </div>
      <div class="tab-item">
        <div class="follow-item">
          <span class="follow-num"><%= @user.followers.count %></span>
          <span class="follow">フォロワー</span>
        </div>
      </div>
      <% if @user.id != current_user.id %>
        <div class="tab-item" id="user-follow">
          <% if current_user.following?(@user) %>
            <%= link_to "/unfollow/#{@user.id}", class: "destroy-relation", data: @user.id, method: :delete do %>
              <img src="/images/following-btn.png" class="relation-btn">
            <% end %>
          <% else %>
            <%= link_to "/follow/@user.id", class: "create-relation", data: @user.id, method: :post do %>
              <img src="/images/follow-btn.png" class="relation-btn">
            <% end %>
          <% end %>
        </div>
        <% end %>
    </div>
  </div>
  <div class="tab-wrapper">
    <div class="tab-content">
      <% if @user.comments.present? %>
        <% @user.comments.each do |comment| %>
          <%= render partial: "one_pick" %>
        <% end %>
        <% else %>
          <%= render partial: "no_pick" %>
      <% end %>
    </div>
  </div>
</div>
