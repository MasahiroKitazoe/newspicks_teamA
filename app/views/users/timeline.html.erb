<div class="side-bar">
  <%= render partial: "current_user" %>
  <div class="side-bar__recomended-user">
    おすすめユーザー
    <div class="side-bar__recomended-user__user">
        <img src="https://img.jisin.jp/wp-content/uploads/2018/05/119600.jpeg" alt="ユーザーサムネイル" class="side-bar__recomended-user__user__image">
        <div class="side-bar__recomended-user__user__name">
          <span>有田　哲平</span></br>
          <span class="side-bar__recomended-user__user__position">
          ナチュラルエイト お笑い芸人
          </span>
        </div>
      <div class="side-bar__recomended-user__user__follow">
        <img src="/images/follow-btn.png" class="side-bar__recomended-user__user__btn">
      </div>
    </div>
  </div>
</div>
<div class="timeline">
  <div class="timeline__header">
    マイニュース
  </div>
  <% if @my_comments %>
    <div class="timeline__list">
      <% @my_comments.each do |comment| %>
        <% if comment.keyword %>
          <div class="timeline__keyword-block">
            <%= link_to "#", class: 'fixed_keyword', data: {keyword: comment.keyword} do %>
              <span class="timeline__keyword-block__keyword">
                <%= comment.keyword %>
              </span>
            <% end %>
            のキーワードにヒット
          </div>
        <% end %>
        <div class="timeline__news">
          <div class="timeline__news__above">
            <div class="timeline__news__pick">
              <%= link_to pick_path(comment.pick) do %>
                <div class="timeline__news__pick__title">
                  <%= comment.pick.title %>
                </div>
              <% end %>
              <div class="timeline__news__pick__info">
                <span class="timeline__news__pick__info__source"><%= comment.pick.source %></span>
                <span class="timeline__news__pick__info__time"><%= comment.pick.created_at %></span>
              </div>
            </div>
            <%= link_to pick_path(comment.pick) do %>
              <div class="timeline__news__image" style="background-image:url(<%= comment.pick.image %>)">
                <div class="timeline__news__image__back">

                </div>
                <div class="timeline__news__image__pick-count">
                  <span class="timeline__news__image__pick-count__num"><%= comment.likes.count %></span>
                  <span class="timeline__news__image__pick-count__text">Picks</span>
                </div>
              </div>
              <% end %>
          </div>
          <div class="timeline__news__bottom">
            <div class="timeline__news__user">
              <img class="timeline__news__user__thumb" src="<%= comment.user.image.url %>" alt="">
              <div class="timeline__news__user__info">
                <div class="timeline__news__user__name">
                  <%= comment.user.last_name %>　<%= comment.user.first_name %>
                </div>
                <div class="timeline__news__user__more">
                  <%= comment.user.company %>　<%= comment.user.position %>
                </div>
              </div>
            </div>
            <div class="timeline__news__comment">
              <%= comment.comment %>
            </div>
            <div class="timeline__news__like-wrapper like-wrapper" id="like<%= comment.id %>" data="<%= comment.id %>">
              <% if current_user.liked?(comment) %>
                <div class="liked timeline__news__like-wrapper__liked" data="<%= comment.get_like_id %>">
                  <img class="thumb-up-r timeline__news__like-wrapper__btn" src="/images/done-like-btn.png">
                  <div class="count-r timeline__news__like-wrapper__count">
                    <%= comment.likes.count %>
                  </div>
                  <div class="like-label-r timeline__news__like-wrapper__label">Likes
                  </div>
                </div>
              <% else %>
                <div class="like timeline__news__like-wrapper__like">
                  <img class="thumb-up-g timeline__news__like-wrapper__btn" src="/images/like-btn.png">
                  <div class="count timeline__news__like-wrapper__count">
                    <%= comment.likes.count %>
                  </div>
                  <div class="like-label timeline__news__like-wrapper__label">Likes
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <% end %>
  <div class="timeline__keyword">
    <div class="timeline__keyword__head">
      <div class="timeline__keyword__head__title">
        フォロー中のキーワード
      </div>
      <div class="timeline__keyword__head__more" id="keyword-search">
        キーワードを探す
      </div>
    </div>
    <div class="timeline__keyword__list">
      <% current_user.keywords.each do |keyword| %>
        <%= link_to "#", class: 'fixed_keyword', data: {keyword: keyword.keyword} do %>
          <div class="timeline__keyword__list__word">
            <%= keyword.keyword %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<%= render partial: "./modal/keyword" %>
