<div class="side-bar">
  <%= render partial: "current_user" %>
  <div class="side-bar__recomended-user">
    <div class="side-bar__recomended-user__title">
      おすすめユーザー
    </div>
    <div class="side-bar__recomended-user__user">
      <div class="side-bar__recomended-user__user__info">
        <img src="https://img.jisin.jp/wp-content/uploads/2018/05/119600.jpeg" alt="ユーザーサムネイル" class="side-bar__recomended-user__user__info__image">
        <div class="side-bar__recomended-user__user__info__name">
          <span>有田　哲平</span></br>
          <span class="side-bar__recomended-user__user__info__name__more">ナチュラルエイト お笑い芸人</span>
        </div>
      </div>
      <div class="side-bar__recomended-user__user__follow">
        <img src="/images/follow-btn.png" class="side-bar__recomended-user__user__follow__btn">
      </div>
    </div>
  </div>
</div>
<div class="timeline">
  <div class="timeline__header">
    マイニュース
  </div>
  <div class="timeline__list">
    <% @follow_user_comments.each do |comment| %>
      <div class="timeline__list__news">
        <div class="timeline__list__news__above">
          <div class="timeline__list__news__above__pick">
            <div class="timeline__list__news__above__pick__title">
              <%= comment.pick.title %>
            </div>
            <div class="timeline__list__news__above__pick__info">
              <span class="timeline__list__news__above__pick__info__source"><%= comment.pick.source %></span>
              <span class="timeline__list__news__above__pick__info__time">4時間前</span>
            </div>
          </div>
          <div class="timeline__list__news__above__image" style="background-image:url(<%= comment.pick.image %>)">
            <div class="timeline__list__news__above__image__pick-count">
              <span class="timeline__list__news__above__image__pick-count__num"><%= comment.likes.count %></span>Picks
            </div>
          </div>
        </div>
        <div class="timeline__list__news__bottom">
          <div class="timeline__list__news__bottom__user">
            <img class="timeline__list__news__bottom__user__thumb" src="<%= comment.user.image.url %>" alt="">
            <div class="timeline__list__news__bottom__user__info">
              <div class="timeline__list__news__bottom__user__info__name">
                <%= comment.user.last_name %>　<%= comment.user.first_name %>
              </div>
              <div class="timeline__list__news__bottom__user__info__more">
                <%= comment.user.company %>　<%= comment.user.position %>
              </div>
            </div>
          </div>
          <div class="timeline__list__news__bottom__comment">
            <%= comment.comment %>
          </div>
          <div class="timeline__list__news__bottom__like-wrapper">
            いいね
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="timeline__keyword">
    <div class="timeline__keyword__head">
      <div class="timeline__keyword__head__title">
        フォロー中のキーワード
      </div>
      <div class="timeline__keyword__head__more">
        キーワードを探す
      </div>
    </div>
    <div class="timeline__keyword__list">
      <div class="timeline__keyword__list__word">
        IT
      </div>
    </div>
  </div>
</div>
