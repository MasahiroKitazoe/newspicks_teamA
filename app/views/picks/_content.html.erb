    <div class="content__user-ranking__users">
      <!-- １行目 -->
      <div class="content__user-ranking__users__paragraf-1">
        <% @user_ranking.each_with_index do |user, i| %>
          <% if user %>
          <!-- １ユーザー -->
            <div class="content__user-ranking__users__paragraf-1__user">
              <div class="content__user-ranking__users__paragraf-1__user__image">
                <div class="content__user-ranking__users__paragraf-1__user__image__rank">
                  <%= i + 1 %>
                </div>
                <%= image_tag user.image.url, class: "content__user-ranking__users__paragraf-1__user__image__user", alt: "アイコン" %>
              </div>
              <div class="content__user-ranking__users__paragraf-1__user__info">
                <p class="content__user-ranking__users__paragraf-1__user__info__name"><%= user.last_name %> <%= user.first_name %></p>
                <p class="content__user-ranking__users__paragraf-1__user__info__position"><%= user.position %></p>
                <p class="content__user-ranking__users__paragraf-1__user__info__like-count">週間 Liked ユーザー数: <span class="content__user-ranking__users__paragraf-1__user__info__like-count__num"><%= @weekly_likes[i] %></span></p>
              </div>
              <% if user_signed_in? %>
                <% if user.id != current_user.id %>
                  <% if current_user.following?(user) %>
                    <div class="content__user-ranking__users__paragraf-2__user__follow">
                      <div class="follow-btn" id="user-follow<%= user.id %>">
                        <%= link_to user.show_unfollow_link, class: "destroy-relation", data: user.id, method: :delete do %>
                          <img src="/images/following-btn.png">
                        <% end %>
                      </div>
                    </div>
                  <% else %>
                    <div class="content__user-ranking__users__paragraf-2__user__follow">
                      <div class="follow-btn" id="user-follow<%= user.id %>">
                        <%= link_to user.show_follow_link, class: "create-relation", data: user.id, method: :post do %>
                          <img src="/images/follow-btn.png">
                        <% end %>
                      </div>
                    </div>
                  <% end %>
