        <div class="content__comment-ranking__comments__paragraf-1">
          <% @comment_ranking.each_with_index do |comment, i| %>
            <!-- １つのコメント -->
            <div class="content__comment-ranking__comments__paragraf-1__comment">
              <!-- ユーザー部分 -->
              <div class="content__comment-ranking__comments__paragraf-1__comment__user">
                <div class="content__comment-ranking__comments__paragraf-1__comment__user__image">
                  <div class="content__comment-ranking__comments__paragraf-1__comment__user__image__rank">
                    <%= i + 1 %>
                  </div>
                  <%= image_tag comment.user.image.url, alt: 'ユーザーイメージ', class: 'content__comment-ranking__comments__paragraf-1__comment__user__image__user' %>
                </div>
                <div class="content__comment-ranking__comments__paragraf-1__comment__user__info">
                  <div class="content__comment-ranking__comments__paragraf-1__comment__user__info__name">
                    <%= comment.user.last_name %>  <%= comment.user.first_name %>
                    <% if comment.user.pro %>
                      <div class="badge">
                        <img src="https://resources.newspicks.com/for_clients/icons/pro_black.png">
                      </div>
                    <% end %>
                  </div>
                  <div class="content__comment-ranking__comments__paragraf-1__comment__user__info__position">
                    <%= comment.user.position %>
                  </div>
                </div>
                <div class="content__comment-ranking__comments__paragraf-1__comment__user__right-block">
                  <div class="content__comment-ranking__comments__paragraf-1__comment__user__like-count">
                    <span class="content__comment-ranking__comments__paragraf-1__comment__user__like-count__num"><%= comment.likes.count %></span> Likes
                  </div>
                  <% if current_user %>
                    <% if current_user.id != comment.user.id %>
                      <% if current_user.following?(comment.user) %>
                        <div class="follow-btn" id="user-follow-comment-ranking<%= comment.user.id %>">
                          <%= link_to comment.user.show_unfollow_link, class: "destroy-relation", data: comment.user.id, method: :delete do %>
                            <img src="/images/following-btn.png">
                          <% end %>
                        </div>
                      <% else %>
                        <div class="follow-btn" id="user-follow-comment-ranking<%= comment.user.id %>">
                          <%= link_to comment.user.show_follow_link, class: "create-relation", data: comment.user.id, method: :post do %>
                            <img src="/images/follow-btn.png">
                          <% end %>
                        </div>
                      <% end %>
                    <% end %>
                  <% end %>
                </div>
              </div>
              <!-- ニュース部分 -->
              <div class="content__comment-ranking__comments__paragraf-1__comment__news">
                <div class="content__comment-ranking__comments__paragraf-1__comment__news__comment">
                  <%= comment.comment %>
                </div>
                <div class="content__comment-ranking__comments__paragraf-1__comment__news__pick">
                  <div class="content__comment-ranking__comments__paragraf-1__comment__news__pick__title">
                    <%= comment.pick.title %>
                  </div>
                  <div class="content__comment-ranking__comments__paragraf-1__comment__news__pick__source">
                    <%= comment.pick.source %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="content__footer">
    <div class="content__footer__items">
      <div class="content__footer__items__item">
        NeawPicksについて
      </div>
      <div class="content__footer__items__item">
        利用規約
      </div>
      <div class="content__footer__items__item">
        コンテンツ利用について
      </div>
      <div class="content__footer__items__item">
        個人情報保護方針
      </div>
      <div class="content__footer__items__item">
        広告掲載
      </div>
    </div>
  </div>
</div>
