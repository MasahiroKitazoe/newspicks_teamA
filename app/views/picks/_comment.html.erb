<div class="comment-container" id="comment_number_<%= comment.id %>">
  <div class="comment-row with-border" data-user="267866" data-news="3250274" follow-user="false" data-comment-version="1" mute-disable="false">
    <div class="user-space">
      <a onclick="NP.showUserSummary(event)" data-user="267866" href="/user/267866?ref=news-summary_3250274">
        <img class="user-cover" src="https://pbs.twimg.com/profile_images/1000993501415329792/EVcLnIF-_400x400.jpg">
      </a>
      <div class="user-profile">
        <a onclick="NP.showUserSummary(event)" data-user="267866" href="/user/267866?ref=news-summary_3250274">
          <div class="name-wrapper">
            <div class="name">
              <%= comment.user.first_name %>
            </div>
          </div>
        </a>
        <div class="job">
          <%= comment.user.company %>
        </div>
        <div class="picktime">
          6時間前
        </div>
        <%= render "edit_button", comment: comment %>
      </div>
    </div>
    <div class="comment-wrapper">
      <div class="comment">
        <%= comment.comment %>
      </div>
      <div class="like-panel">
        <div class="like-wrapper">
          <div class="like" onclick="NP.like(this)" data-user="267866" data-liked="false" data-news="3250274">
            <img class="thumb-up-r" src="/images/like-btn.png">
            <div class="count">
              14
            </div>
            <div class="like-label">Likes
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="embedded-pick-editor" style="display: none;">
      <div class="pick-area edit">
        <textarea class="comment on-focus">テスト</textarea>
        <div class="pick-control">
          <div class="description">シェアする</div>
          <div class="sns twitter">
            <img class="share-normal" src="/images/twitter_gr.66bcb5fe.png" title="off">
            <img class="share-selected" src="/images/twitter.f04be6e0.png" title="post to twitter">
          </div>
          <div class="sns facebook">
            <img class="share-normal" src="/images/facebook_gr.17203d35.png" title="off">
            <img class="share-selected" src="/images/facebook.89083ca0.png" title="post to facebook">
          </div>
          <div class="pick">
            <img alt="pick" src="/images/btn-pick.1fa6973d.png">
          </div>
          <div class="cancel-wrapper">
            <div class="cancel">キャンセル</div>
          </div>
        </div>
        <div class="error-message hide">Pick に失敗しました</div>
      </div>
    </div>
  </div>
</div>
