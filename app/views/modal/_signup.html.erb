<div class="back signup" id="signup">
  <div class="signup__overlay">
    <div class="form signup__form">
      <h2>Sign up</h2>

      <%= form_with model: resource, url: :user_registration do |f| %>

        <div id="signup-error_msg" class="signup__form__error">

        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div>
          実名登録を推奨しています。
        </div>

        <div class="field">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name %>
        </div>

        <div class="field">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name %>
        </div>

        <div class="field">
          <%= f.label "会社名/組織名" %><br />
          <%= f.text_field :company %>
        </div>

        <div class="field">
          <%= f.label :役職 %><br />
          <%= f.text_field :position %>
        </div>

        <div class="field">
          <%= f.label :自己紹介文 %><br />
          <%= f.text_area :profile %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label "パスワード（確認用）" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

